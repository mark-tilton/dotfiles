{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "args" : ["--log-file=/tmp/ccls.log", "-v=1"],
            "filetypes": [
                "c",
                "cpp",
                "cc",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "client": {
                    "snippetSupport": true
                }
            }
        }
    }
}
